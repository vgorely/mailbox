{
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "properties": {
    "messages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "uid": {
            "type": "integer"
          },
          "sender": {
            "type": "string"
          },
          "subject": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "time_sent": {
            "type": "string"
          },
          "time_read": {
            "type": "string"
          }
        }
      }
    },
    "total": {
      "type": "integer"
    }
  }
}
